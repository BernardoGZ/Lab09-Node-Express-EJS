<%- include("../template/head", {quer, clear, tableData, waitListData}) -%>



<div class="container">

  <div class="jumbotron">
    <h1 class="text-center"><span class="fa fa-fire"></span> Hot Restaurant</h1>
    <hr>
    <h2 class="text-center">Current Reservations and Waiting List</h2>
    <br>

    <div class="text-center">
      <a href="/reserve"><button class="btn btn-lg btn-danger"><span class="fa fa-credit-card"></span> Make Reservation</button></a>
      <a href="/"><button class="btn btn-lg btn-default"><span class="fa fa-home"></span></button></a>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">

      <!-- Current Tables in Use -->
      <div class="card">
        <div class="card-header">
          <h4>Current Reservations</h4>

          <% for (var i = 0; i < tableData.length; i++) { %>

            <hr>
            <hr>
            <h2>Table # <%= (i + 1) %></h2>
            <hr>
            <h4>ID: <%= tableData[i].customerID %></h4>
            <h4>Name: <%= tableData[i].customerName %></h4>
            <h4>Email: <%= tableData[i].customerEmail %></h4>
            <h4>Phone: <%= tableData[i].phoneNumber %></h4>

        <% } %>
        </div>
        <div class="card-body">
          <ul id="tableList" class="list-group"></ul>
        </div>
      </div>

      <!-- Waiting List Card -->
      <div class="card mt-4">
        <div class="card-header">
          <h4>Waiting List</h4>
          
            <% for (var i = 0; i < waitListData.length; i++) { %>

              <hr>
              <hr>
              <h2>Table # <%= (i + 1) %></h2>
              <hr>
              <h4>ID: <%= waitListData[i].customerID %></h4>
              <h4>Name: <%= waitListData[i].customerName %></h4>
              <h4>Email: <%= waitListData[i].customerEmail %></h4>
              <h4>Phone: <%= waitListData[i].phoneNumber %></h4>

            <% } %>

        </div>
        <div class="card-body">
          <ul id="waitList" class="list-group"></ul>
        </div>
      </div>
    </div>
  </div>
